{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": [
    "build",
    "scripts",
    "config",
    ".storybook",
    "node_modules",
    "**/story.tsx",
    "**/*.spec.ts",
    "@nivo/bar",
    ".vscode",
    "cypress",
    ".history",
    "e2e",
    "etc",
    "public",
    ".git"
  ]
}
